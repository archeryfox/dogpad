import {format} from 'date-fns';
import {Link} from 'react-router-dom';
import rehypeRaw from "rehype-raw";
import {useState, useEffect} from 'react';
import { motion, AnimatePresence } from 'framer-motion';

const EventCard = ({event, user, isSubscribed, onSubscribe, onUnsubscribe, inProfileFeed, inSession}) => {
    // –°–æ—Å—Ç–æ—è–Ω–∏–µ –¥–ª—è –º–æ–¥–∞–ª—å–Ω–æ–≥–æ –æ–∫–Ω–∞ —Å–æ–≥–ª–∞—Å–∏—è
    const [isModalOpen, setIsModalOpen] = useState(false);
    const [isHovered, setIsHovered] = useState(false);

    // –°–æ—Å—Ç–æ—è–Ω–∏–µ –¥–ª—è —É–≤–µ–¥–æ–º–ª–µ–Ω–∏–π
    const [notification, setNotification] = useState(null);

    // –§—É–Ω–∫—Ü–∏—è –¥–ª—è –æ—Ç–∫—Ä—ã—Ç–∏—è –º–æ–¥–∞–ª—å–Ω–æ–≥–æ –æ–∫–Ω–∞
    const openModal = () => {
        setIsModalOpen(true);
    };

    // –§—É–Ω–∫—Ü–∏—è –¥–ª—è –∑–∞–∫—Ä—ã—Ç–∏—è –º–æ–¥–∞–ª—å–Ω–æ–≥–æ –æ–∫–Ω–∞
    const closeModal = () => {
        setIsModalOpen(false);
    };

    // –§—É–Ω–∫—Ü–∏—è –¥–ª—è –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏—è —É–≤–µ–¥–æ–º–ª–µ–Ω–∏—è
    const showNotification = (message, type = 'success') => {
        setNotification({ message, type });

        // –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏ —Å–∫—Ä—ã–≤–∞–µ–º —É–≤–µ–¥–æ–º–ª–µ–Ω–∏–µ —á–µ—Ä–µ–∑ 3 —Å–µ–∫—É–Ω–¥—ã
        setTimeout(() => {
            setNotification(null);
        }, 3000);
    };

    // –§—É–Ω–∫—Ü–∏—è –¥–ª—è –ø–æ–¥—Ç–≤–µ—Ä–∂–¥–µ–Ω–∏—è –ø–æ–¥–ø–∏—Å–∫–∏ –Ω–∞ –ø–ª–∞—Ç–Ω–æ–µ –º–µ—Ä–æ–ø—Ä–∏—è—Ç–∏–µ
    const handleSubscribe = () => {
        try {
            onSubscribe(event.id); // –ü–æ–¥–ø–∏—Å–∫–∞ –Ω–∞ —Å–æ–±—ã—Ç–∏–µ
            closeModal(); // –ó–∞–∫—Ä—ã—Ç—å –º–æ–¥–∞–ª—å–Ω–æ–µ –æ–∫–Ω–æ
            showNotification(`–í—ã —É—Å–ø–µ—à–Ω–æ –ø–æ–¥–ø–∏—Å–∞–ª–∏—Å—å –Ω–∞ –º–µ—Ä–æ–ø—Ä–∏—è—Ç–∏–µ "${event.name}"`, 'success');
        } catch (error) {
            showNotification(`–û—à–∏–±–∫–∞ –ø—Ä–∏ –ø–æ–¥–ø–∏—Å–∫–µ: ${error.message}`, 'error');
        }
    };

    // –§—É–Ω–∫—Ü–∏—è –¥–ª—è –æ—Ç–ø–∏—Å–∫–∏ –æ—Ç –º–µ—Ä–æ–ø—Ä–∏—è—Ç–∏—è
    const handleUnsubscribe = () => {
        try {
            onUnsubscribe(event.id);
            showNotification(`–í—ã –æ—Ç–ø–∏—Å–∞–ª–∏—Å—å –æ—Ç –º–µ—Ä–æ–ø—Ä–∏—è—Ç–∏—è "${event.name}"`, 'info');
        } catch (error) {
            showNotification(`–û—à–∏–±–∫–∞ –ø—Ä–∏ –æ—Ç–ø–∏—Å–∫–µ: ${error.message}`, 'error');
        }
    };

    // –§—É–Ω–∫—Ü–∏—è –¥–ª—è –ø–æ–¥–ø–∏—Å–∫–∏ –Ω–∞ –±–µ—Å–ø–ª–∞—Ç–Ω–æ–µ –º–µ—Ä–æ–ø—Ä–∏—è—Ç–∏–µ
    const handleFreeSubscribe = () => {
        try {
            onSubscribe(event.id);
            showNotification(`–í—ã —É—Å–ø–µ—à–Ω–æ –ø–æ–¥–ø–∏—Å–∞–ª–∏—Å—å –Ω–∞ –º–µ—Ä–æ–ø—Ä–∏—è—Ç–∏–µ "${event.name}"`, 'success');
        } catch (error) {
            showNotification(`–û—à–∏–±–∫–∞ –ø—Ä–∏ –ø–æ–¥–ø–∏—Å–∫–µ: ${error.message}`, 'error');
        }
    };

    // –ü—Ä–æ–≤–µ—Ä–∫–∞, —è–≤–ª—è–µ—Ç—Å—è –ª–∏ —Ç–µ–∫—É—â–∏–π –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å —Å–ø–∏–∫–µ—Ä–æ–º —ç—Ç–æ–≥–æ –º–µ—Ä–æ–ø—Ä–∏—è—Ç–∏—è
    const isSpeaker = event.speakers?.some(speaker => speaker.speaker.user.id === user.id) || inSession;

    // –ê–Ω–∏–º–∞—Ü–∏–∏ –¥–ª—è –∫–∞—Ä—Ç–æ—á–∫–∏
    const cardVariants = {
        hidden: { opacity: 0, y: 20 },
        visible: {
            opacity: 1,
            y: 0,
            transition: {
                duration: 0.5,
                ease: "easeInOut"
            }
        },
        hover: {
            y: -10,
            boxShadow: "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)",
            transition: {
                type: "spring",
                stiffness: 300,
                damping: 20
            }
        }
    };

    // –ê–Ω–∏–º–∞—Ü–∏–∏ –¥–ª—è –º–æ–¥–∞–ª—å–Ω–æ–≥–æ –æ–∫–Ω–∞
    const modalVariants = {
        hidden: { opacity: 0, scale: 0.8 },
        visible: {
            opacity: 1,
            scale: 1,
            transition: {
                duration: 0.3,
                ease: "easeOut"
            }
        },
        exit: {
            opacity: 0,
            scale: 0.8,
            transition: {
                duration: 0.2,
                ease: "easeIn"
            }
        }
    };

    // –ê–Ω–∏–º–∞—Ü–∏–∏ –¥–ª—è –∫–Ω–æ–ø–æ–∫
    const buttonVariants = {
        hover: {
            scale: 1.05,
            transition: {
                type: "spring",
                stiffness: 400,
                damping: 10
            }
        },
        tap: { scale: 0.95 }
    };

    // –ê–Ω–∏–º–∞—Ü–∏–∏ –¥–ª—è –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è
    const imageVariants = {
        hover: {
            scale: 1.05,
            borderRadius: "0.3rem",
            transition: {
                duration: 0.3,
                ease: "easeInOut"
            }
        }
    };

    // –ê–Ω–∏–º–∞—Ü–∏–∏ –¥–ª—è –∫–∞—Ç–µ–≥–æ—Ä–∏–π
    const categoryVariants = {
        hidden: { opacity: 0, x: -10 },
        visible: (i) => ({
            opacity: 1,
            x: 0,
            transition: {
                delay: i * 0.1,
                duration: 0.3
            }
        })
    };

    // –ê–Ω–∏–º–∞—Ü–∏–∏ –¥–ª—è —É–≤–µ–¥–æ–º–ª–µ–Ω–∏–π
    const notificationVariants = {
        hidden: { opacity: 0, y: -50, x: "-50%" },
        visible: {
            opacity: 1,
            y: 0,
            x: "-50%",
            transition: {
                type: "spring",
                stiffness: 500,
                damping: 25
            }
        },
        exit: {
            opacity: 0,
            y: -50,
            x: "-50%",
            transition: {
                duration: 0.2
            }
        }
    };

    return (
        <motion.div
            className="event-card bg-white rounded-xl overflow-hidden shadow-lg hover:shadow-2xl transition-shadow duration-300"
            variants={cardVariants}
            initial="hidden"
            animate="visible"
            whileHover="hover"
            onHoverStart={() => setIsHovered(true)}
            onHoverEnd={() => setIsHovered(false)}
            layoutId={`event-card-${event.id}`}
        >
            {/* –ò–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ –º–µ—Ä–æ–ø—Ä–∏—è—Ç–∏—è */}
            {event.image && (
                <motion.div
                    className="relative h-48 overflow-hidden"
                    whileHover="hover"
                >
                    {!inProfileFeed && (
                        <motion.img
                            src={event?.image}
                            alt={event?.name}
                            className="w-full rounded h-full object-cover"
                            variants={imageVariants}
                        />
                    )}
                </motion.div>
            )}

            <div className="p-5">
                {/* –ù–∞–∑–≤–∞–Ω–∏–µ –∏ –¥–∞—Ç–∞ –º–µ—Ä–æ–ø—Ä–∏—è—Ç–∏—è (–ø–µ—Ä–µ–º–µ—â–µ–Ω—ã —Å—é–¥–∞ –∏–∑ –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è) */}
                <h3 className="text-xl font-bold text-blue-600 mb-1">
                    <Link to={`/event/${event.id}`} className="hover:text-blue-800 transition-colors">
                        {event?.name}
                    </Link>
                </h3>
                <p className="text-sm text-gray-500 mb-4">
                    {format(new Date(event.date), 'dd.MM.yyyy HH:mm')}
                </p>

                {/* –ú–µ—Å—Ç–æ –ø—Ä–æ–≤–µ–¥–µ–Ω–∏—è */}
                <div className="flex items-center mb-3 text-gray-600">
                    <motion.svg
                        xmlns="http://www.w3.org/2000/svg"
                        className="h-5 w-5 mr-2 text-blue-500"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                        initial={{scale: 1}}
                        animate={{scale: isHovered ? 1.2 : 1}}
                        transition={{duration: 0.3}}
                    >
                        <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2}
                              d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                        <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2}
                              d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                    </motion.svg>
                    <span>{event?.venue?.name ?? "–û–Ω–ª–∞–π–Ω"}</span>
                </div>

                {/* –°—Ç–æ–∏–º–æ—Å—Ç—å */}
                <div className="mb-4">
                    {event.isPaid && event.price ? (
                        <motion.div
                            className="inline-block bg-red-100 text-red-800 px-3 py-1 rounded-full text-sm font-semibold"
                            whileHover={{scale: 1.05}}
                        >
                            –°—Ç–æ–∏–º–æ—Å—Ç—å: {event.price}‚ÇΩ
                        </motion.div>
                    ) : (
                        <motion.div
                            className="inline-block bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm font-semibold"
                            whileHover={{scale: 1.05}}
                        >
                            –ë–µ—Å–ø–ª–∞—Ç–Ω–æ–µ –º–µ—Ä–æ–ø—Ä–∏—è—Ç–∏–µ
                        </motion.div>
                    )}
                </div>

                {/* –û—Ä–≥–∞–Ω–∏–∑–∞—Ç–æ—Ä */}
                <motion.div
                    className="flex items-center mb-4 p-3 bg-gray-50 rounded-lg"
                    whileHover={{backgroundColor: "#f3f4f6"}}
                >
                    <motion.img
                        src={event.organizer?.avatar}
                        alt={event.organizer?.name}
                        className="w-10 h-10 rounded-full object-cover border-2 border-blue-500"
                        whileHover={{scale: 1.1, rotate: 5}}
                    />
                    <div className="ml-3">
                        <p className="text-gray-800 font-medium">{event.organizer?.name}</p>
                        <p className="text-gray-500 text-sm">{event.organizer?.email}</p>
                    </div>
                </motion.div>

                {/* –ö–∞—Ç–µ–≥–æ—Ä–∏–∏ */}
                {event.categories?.length > 0 && (
                    <div className="mb-4">
                        <h4 className="text-sm font-semibold text-gray-700 mb-2">–ö–∞—Ç–µ–≥–æ—Ä–∏–∏:</h4>
                        <div className="flex flex-wrap gap-2">
                            {event.categories.map((category, index) => (
                                <motion.span
                                    key={index}
                                    className="px-2 py-1 bg-blue-100 text-blue-800 text-xs rounded-full"
                                    custom={index}
                                    variants={categoryVariants}
                                    initial="hidden"
                                    animate="visible"
                                    whileHover={{scale: 1.1, backgroundColor: "#dbeafe"}}
                                >
                                    {category.category.name}
                                </motion.span>
                            ))}
                        </div>
                    </div>
                )}

                {/* –°–ø–∏–∫–µ—Ä—ã */}
                {event.speakers?.length > 0 && (
                    <div className="mb-4">
                        <h4 className="text-sm font-semibold text-gray-700 mb-2">–°–ø–∏–∫–µ—Ä—ã:</h4>
                        <div className="flex flex-wrap gap-2">
                            {event.speakers.map((speaker, index) => (
                                <motion.span
                                    key={index}
                                    className="px-2 py-1 bg-purple-100 text-purple-800 text-xs rounded-full"
                                    custom={index}
                                    variants={categoryVariants}
                                    initial="hidden"
                                    animate="visible"
                                    whileHover={{scale: 1.1, backgroundColor: "#f3e8ff"}}
                                >
                                    {speaker.speaker.name}
                                </motion.span>
                            ))}
                        </div>
                    </div>
                )}

                {/* –ö–Ω–æ–ø–∫–∞ –ø–æ–¥–ø–∏—Å–∫–∏ –∏–ª–∏ –æ—Ç–ø–∏—Å–∫–∏ */}
                <div className="mt-4 flex justify-between items-center">
                    <Link
                        to={`/event/${event.id}`}
                        className="text-blue-600 hover:text-blue-800 text-sm font-medium"
                    >
                        –ü–æ–¥—Ä–æ–±–Ω–µ–µ ‚Üí
                    </Link>

                    {isSpeaker ? (
                        <motion.div
                            className="px-3 py-1 bg-yellow-100 text-yellow-800 rounded-full text-sm font-medium"
                            whileHover={{scale: 1.05}}
                        >
                            –í—ã —Å–ø–∏–∫–µ—Ä üßê
                        </motion.div>
                    ) : (
                        !isSubscribed ? (
                            <motion.button
                                className="py-2 px-4 bg-blue-500 text-white rounded-full font-medium text-sm shadow-md hover:bg-blue-600"
                                onClick={event.isPaid ? openModal : handleFreeSubscribe}
                                variants={buttonVariants}
                                whileHover="hover"
                                whileTap="tap"
                            >
                                –ü–æ–¥–ø–∏—Å–∞—Ç—å—Å—è
                            </motion.button>
                        ) : (
                            <motion.button
                                onClick={handleUnsubscribe}
                                className="py-2 px-4 bg-red-500 text-white rounded-full font-medium text-sm shadow-md hover:bg-red-600"
                                variants={buttonVariants}
                                whileHover="hover"
                                whileTap="tap"
                            >
                                –û—Ç–ø–∏—Å–∞—Ç—å—Å—è
                            </motion.button>
                        )
                    )}
                </div>
            </div>

            {/* –ú–æ–¥–∞–ª—å–Ω–æ–µ –æ–∫–Ω–æ —Å–æ–≥–ª–∞—Å–∏—è */}
            <AnimatePresence>
                {isModalOpen && (
                    <motion.div
                        className="fixed inset-0 bg-black bg-opacity-50 flex justify-center items-center z-50"
                        initial={{opacity: 0}}
                        animate={{opacity: 1}}
                        exit={{opacity: 0}}
                        onClick={closeModal}
                    >
                        <motion.div
                            className="bg-white p-6 rounded-xl shadow-2xl w-full max-w-md m-4"
                            variants={modalVariants}
                            initial="hidden"
                            animate="visible"
                            exit="exit"
                            onClick={e => e.stopPropagation()}
                        >
                            <h3 className="text-xl font-bold mb-4 text-gray-800">–ü–æ–¥—Ç–≤–µ—Ä–¥–∏—Ç–µ –æ–ø–ª–∞—Ç—É</h3>
                            <p className="text-gray-600 mb-6">
                                –í—ã —Å–æ–±–∏—Ä–∞–µ—Ç–µ—Å—å –ø–æ–¥–ø–∏—Å–∞—Ç—å—Å—è –Ω–∞ –ø–ª–∞—Ç–Ω–æ–µ –º–µ—Ä–æ–ø—Ä–∏—è—Ç–∏–µ "{event.name}"
                                —Å—Ç–æ–∏–º–æ—Å—Ç—å—é {event.price}‚ÇΩ.
                                –°—Ä–µ–¥—Å—Ç–≤–∞ –±—É–¥—É—Ç —Å–ø–∏—Å–∞–Ω—ã —Å –≤–∞—à–µ–≥–æ –±–∞–ª–∞–Ω—Å–∞.
                            </p>
                            <div className="flex justify-end space-x-3">
                                <motion.button
                                    className="py-2 px-4 bg-gray-200 text-gray-800 rounded-lg font-medium"
                                    onClick={closeModal}
                                    variants={buttonVariants}
                                    whileHover="hover"
                                    whileTap="tap"
                                >
                                    –û—Ç–º–µ–Ω–∏—Ç—å
                                </motion.button>
                                <motion.button
                                    className="py-2 px-4 bg-blue-500 text-white rounded-lg font-medium shadow-md"
                                    onClick={handleSubscribe}
                                    variants={buttonVariants}
                                    whileHover="hover"
                                    whileTap="tap"
                                >
                                    –ü–æ–¥—Ç–≤–µ—Ä–¥–∏—Ç—å
                                </motion.button>
                            </div>
                        </motion.div>
                    </motion.div>
                )}
            </AnimatePresence>

            {/* –£–≤–µ–¥–æ–º–ª–µ–Ω–∏—è */}
            <AnimatePresence>
                {notification && (
                    <motion.div
                        className={`fixed top-4 left-1/2 transform -translate-x-1/2 z-50 py-2 px-4 rounded-lg shadow-lg ${
                            notification.type === 'success' ? 'bg-green-500 text-white' :
                                notification.type === 'error' ? 'bg-red-500 text-white' :
                                    notification.type === 'info' ? 'bg-blue-500 text-white' :
                                        'bg-yellow-500 text-white'
                        }`}
                        variants={notificationVariants}
                        initial="hidden"
                        animate="visible"
                        exit="exit"
                    >
                        <div className="flex items-center">
                            {notification.type === 'success' && (
                                <svg className="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                                     xmlns="http://www.w3.org/2000/svg">
                                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth="2"
                                          d="M5 13l4 4L19 7"></path>
                                </svg>
                            )}
                            {notification.type === 'error' && (
                                <svg className="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                                     xmlns="http://www.w3.org/2000/svg">
                                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth="2"
                                          d="M6 18L18 6M6 6l12 12"></path>
                                </svg>
                            )}
                            {notification.type === 'info' && (
                                <svg className="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                                     xmlns="http://www.w3.org/2000/svg">
                                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth="2"
                                          d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                            )}
                            {notification.type === 'warning' && (
                                <svg className="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                                     xmlns="http://www.w3.org/2000/svg">
                                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth="2"
                                          d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                                </svg>
                            )}
                            <span>{notification.message}</span>
                        </div>
                    </motion.div>
                )}
            </AnimatePresence>
        </motion.div>
    );
};

export default EventCard;
